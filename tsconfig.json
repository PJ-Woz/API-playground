{
  "compilerOptions": {
    "target": "ES6",                          // Specifies the ECMAScript target version
    "module": "commonjs",                     // Specifies the module code generation
    "strict": true,                           // Enables all strict type-checking options
    "esModuleInterop": true,                  // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                     // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true // Disallows inconsistently-cased references to the same file
  },
  "include": [
    "src/**/*"                                // Includes all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules",                           // Excludes the node_modules directory
    "**/*.spec.ts"                            // Excludes test files with .spec.ts extension
  ]
}